        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to content_tag(:span, "pep.io (beta)"), root_url, class: "brand" %>
      <div class="container nav-collapse">
        <ul class="nav">
          <li><%= link_to "Restaurants", restaurants_path  %></li>
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#"
