<div class="container">
  
<p id="notice"><%= notice %></p>

<h1>
  <%= @restaurant.name %>
</h1>
<div class="row">
  <div class="span4">
    <% if can? :update, @restaurant %>
      <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
    <% end %>

    <% if @restaurant.description.present? %>
      <h3>About <%= @restaurant.name %></h3>
      <p>
        <%= @restaurant.description %>
      </p>
    <% end %>
    <p>
      <b>Phone:</b>
      <phone><%= @restaurant.phone %></phone>
    </p>
    <% if @restaurant.website.present? %>
      <p>
        <b>Website:</b>
        <%= link_to @restaurant.website, @restaurant.website %>
      </p>
    <% end %>
    <h3>We Take</h3>
    <% if @restaurant.cash? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/cash_32.png" %>
    <% end %>
    <% if @restaurant.visa? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/visa_32.png" %>
    <% end %>
    <% if @restaurant.master? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/mastercard_32.png" %>
    <% end %>
    <% if @restaurant.amex? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/american_express_green_32.png" %>
    <% end %>
    <% if @restaurant.discover? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/discover_32.png" %>
    <% end %>
    <% if @restaurant.jcb? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/jcb_32.png" %>
    <% end %>
    <% if @restaurant.diners_club? %>
      <%= image_tag "https://s3.amazonaws.com/besteatsin/icons/diners_club_32.png" %>
      <% end %>

    <h3>Hours</h3>
    <ul class="unstyled">
      <li class="mono">Sun: <%= @restaurant.sunday %></li>
      <li class="mono">Mon: <%= @restaurant.monday %></li>
      <li class="mono">Tue: <%= @restaurant.tuesday %></li>
      <li class="mono">Wed: <%= @restaurant.wednesday %></li>
      <li class="mono">Thu: <%= @restaurant.thursday %></li>
      <li class="mono">Fri: <%= @restaurant.friday %></li>
      <li class="mono">Sat: <%= @restaurant.saturday %></li>
    </ul>
    <% if @restaurant.delivery.present? %>
      <h3>Delivery Information</h3>
      <p><%= @restaurant.delivery %></p>
    <% end %>

    <h3>Location</h3>
    <p>
      <address><%= @restaurant.address %></address>
    </p>

    <% if @restaurant.parking.present? %>
      <p>
        <b>Parking:</b> <%= @restaurant.parking %>
      </p>
    <% end %>
    

    <%= image_tag("http://placehold.it/300x250") %>
    <caption>A Map Goes Here</caption>
  </div>
  <div class="span8">
    <% if @restaurant.specials.special_active.ended.present? %>
      <div class="alert alert-block alert-success">
        <a class="close" data-dismiss="alert">Ã—</a>
        <h3 class="alert-heading">Specials!</h3>
        <ul class="unstyled">
        <% @restaurant.specials.special_active.ended.each do |s| %>
          <li><b><%= s.name %></b> <%= s.description %>
          </li>
        <% end -%>
        </ul>
      </div>
      
    <% end %>

    <h1>Menu</h1>
    <p><em>Add Menu Item link</em></p>
    <% @restaurant.menu_items.on_menu.each do |m| %>
      <div class="row">
        <% if m.heading? %>
          <h2><%= m.name %></h2>
        <% elsif m.image.present? %>
          <div class="span6">  
            <h3><%= m.name %></h3>
            <p>
              <em>(edit link)</em><br>
              <% if m.price.present? %>
                <b><%= m.price %></b>
              <% end %>
            <br>
              <%= m.description %>
            </p>
          </div>
          <div class="span2">
            <%= image_tag(m.image) %> 
          </div>
        <% else %>
          <div class="span8">
            <h3><%= m.name %></h3>
            <p>
              <em>(edit link)</em><br>
              <% if m.price.present? %>
                <b><%= m.price %></b>
              <% end %>
            <br>
              <%= m.description %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
</div> 
