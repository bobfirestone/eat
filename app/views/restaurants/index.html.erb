<div class="container">
  <div class="span12">
    <%- flash.each do |name, msg| -%>
      <div class="alert">
        <a class="close" data-dismiss="alert">Ã—</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    <%- end -%>

    <h1>Listing restaurants</h1>

    <div class="row">
      <div class="span9">
        <%= image_tag("http://placehold.it/700x535") %>
      </div>
      <div class="span3">
      <% @restaurants.each do |restaurant| %>
        <h4><%= link_to restaurant.name, restaurant %></h4>
        <p>
          <%= restaurant.address %><br>
          <%= restaurant.phone %>
        </p>
      <% end %>
      </div>
    </div>
  </div>
</div>